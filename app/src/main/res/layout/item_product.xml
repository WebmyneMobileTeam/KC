<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout
        android:id="@+id/linearParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/m_16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/L_MARGIN_SIZE"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/M_TEXT"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProductDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="2"
                android:text="@string/cheese_ipsum"
                android:textColor="@color/white"
                android:textSize="@dimen/N_TEXT" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/product_image"
            android:layout_height="@dimen/product_image"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

</android.support.v7.widget.CardView>