<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webmyne.kidscrown.ui.PaymentActivity">

    <include layout="@layout/app_bar2"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewOrders"
        android:layout_below="@+id/toolbarLayout"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgfsd"
            android:textSize="@dimen/S_TEXT_SIZE"
            android:textStyle="bold" />
    </ScrollView>

    <Button
        android:id="@+id/viewOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/mybutton"
        android:text="View Orders"
        android:textColor="#ffffff"
        android:textSize="@dimen/M_TEXT_SIZE"
        android:textStyle="bold" />
</RelativeLayout>
