<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webmyne.kidscrown.ui.OrderDetailsActivity">

    <include layout="@layout/app_bar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:layout_below="@+id/toolbarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/addressLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/CARD_DIVIDER_HEIGHT">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/S_TEXT_SIZE"
                        android:paddingRight="@dimen/S_TEXT_SIZE"
                        android:paddingTop="@dimen/S_TEXT_SIZE">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shipping Address"
                            android:textSize="@dimen/S_TEXT_SIZE"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtShipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginTop="@dimen/S_MARGIN_SIZE"
                            android:paddingBottom="@dimen/L_MARGIN_SIZE"
                            android:text="Address"
                            android:textSize="@dimen/VS_TEXT_SIZE" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/CARD_DIVIDER_HEIGHT">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/S_TEXT_SIZE"
                        android:paddingRight="@dimen/S_TEXT_SIZE"
                        android:paddingTop="@dimen/S_TEXT_SIZE">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/M_MARGIN_SIZE"
                            android:text="Order Summary"
                            android:textSize="@dimen/S_TEXT_SIZE"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/primaryColor"></View>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/S_MARGIN_SIZE"
                            android:orientation="horizontal"
                            android:padding="@dimen/M_MARGIN_SIZE">

                            <TextView
                                android:id="@+id/pdName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:text="Product"
                                android:textSize="@dimen/VS_TEXT_SIZE"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pdQty"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:gravity="center"
                                android:text="Quantity"
                                android:textSize="@dimen/VS_TEXT_SIZE"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pdPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:gravity="right"
                                android:paddingRight="@dimen/BADGE_TEXT_SIZE"
                                android:text="Price"
                                android:textSize="@dimen/VS_TEXT_SIZE"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/orderSummaryLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        </LinearLayout>

                        <ListView
                            android:id="@+id/orderListview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/payment3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="Payable Amount : "
            android:textColor="@color/black"
            android:textSize="@dimen/S_TEXT_SIZE"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPayable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/payment3"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="@dimen/S_TEXT_SIZE" />

    </LinearLayout>

</RelativeLayout>
