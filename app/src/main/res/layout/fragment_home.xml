<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.webmyne.kidscrown.fragment.HomeFragment">

    <ImageView
        android:id="@+id/offerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/FDAicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/fdalogo" />

    <com.webmyne.kidscrown.custom.familiarrecyclerview.FamiliarRecyclerView
        android:id="@+id/productRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/FDAicon"
        android:layout_below="@+id/offerImage"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="8dp"
        android:divider="#00000000"
        android:dividerHeight="@dimen/CARD_DIVIDER_HEIGHT"
        android:scrollbars="none" />

    <com.webmyne.kidscrown.custom.EmptyLayout
        android:id="@+id/emptyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone">

    </com.webmyne.kidscrown.custom.EmptyLayout>

</RelativeLayout>
