<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.webmyne.kidscrown.ui.ConfirmOrderActivity">

    <include
        android:id="@+id/tool"
        layout="@layout/app_bar2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"></include>

    <LinearLayout
        android:id="@+id/totalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rLContPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/M_MARGIN_SIZE"
            android:layout_marginLeft="@dimen/VS_TEXT_SIZE"
            android:layout_marginRight="@dimen/VS_TEXT_SIZE"
            android:background="@drawable/mybutton"
            android:padding="@dimen/VS_TEXT_SIZE">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/M_MARGIN_SIZE"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/conti"
                android:src="@drawable/ic_checkout" />

            <TextView
                android:id="@+id/conti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Confirm Order"
                android:textAllCaps="false"
                android:textColor="#f1f1f1"
                android:textSize="@dimen/M_TEXT_SIZE"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/segmentToolBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/totalLayout"
        android:layout_below="@id/tool"
        android:background="@color/white"
        android:orientation="vertical">

        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/VS_TEXT_SIZE"
            android:checkedButton="@+id/tabBilling"
            android:orientation="horizontal"
            segmentedgroup:border_width="2dp"
            segmentedgroup:corner_radius="@dimen/VS_TEXT_SIZE">

            <RadioButton
                android:id="@+id/tabBilling"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/STD_TXT_PADDING_SIZE"
                android:text="Billing Address"
                android:textSize="@dimen/S_TEXT_SIZE" />

            <RadioButton
                android:id="@+id/tabShipping"
                style="@style/RadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/STD_TXT_PADDING_SIZE"
                android:text="Shipping Address"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </info.hoang8f.android.segmented.SegmentedGroup>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/fragment_new_address_tab"></include>

            <include layout="@layout/fragment_existing_address"></include>

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>