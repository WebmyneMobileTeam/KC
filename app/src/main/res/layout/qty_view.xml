<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="@dimen/m_12dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="@dimen/N_TEXT"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtActualQty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/off_white"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingLeft="@dimen/m_12dp"
            android:paddingRight="@dimen/m_12dp"
            android:text="1"
            android:textSize="@dimen/M_TEXT"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:padding="@dimen/m_12dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="@dimen/N_TEXT"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>