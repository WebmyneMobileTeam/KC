<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/m_3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/S_TEXT_SIZE"
            android:paddingRight="@dimen/S_TEXT_SIZE"
            android:paddingTop="@dimen/S_TEXT_SIZE">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Name"
                android:textSize="@dimen/M_TEXT"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtQTY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                android:fontFamily="sans-serif-condensed"
                android:text="Qty"
                android:textSize="@dimen/N_TEXT" />

            <TextView
                android:id="@+id/txtPriceIndividual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                android:fontFamily="sans-serif-condensed"
                android:text="Unit Price"
                android:textSize="@dimen/N_TEXT" />

            <TextView
                android:id="@+id/txtPriceTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                android:fontFamily="sans-serif-condensed"
                android:text="Subtotal = Price"
                android:textSize="@dimen/N_TEXT"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRemove"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:text="Remove"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/S_TEXT"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v7.widget.CardView>