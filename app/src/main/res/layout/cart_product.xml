<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/CARD_DIVIDER_HEIGHT"
    android:layout_marginTop="@dimen/VS_TEXT_SIZE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/S_TEXT_SIZE"
            android:paddingRight="@dimen/S_TEXT_SIZE"
            android:paddingTop="@dimen/S_TEXT_SIZE">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Name"
                    android:textSize="@dimen/M_TEXT"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m_16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.webmyne.kidscrown.custom.QuantityView
                    android:id="@+id/quantityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/m_8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/m_16dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPriceIndividual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Price "
                        android:textSize="@dimen/N_TEXT" />

                    <TextView
                        android:id="@+id/txtQTY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                        android:fontFamily="sans-serif-condensed"
                        android:text="x Qty"
                        android:textSize="@dimen/N_TEXT" />

                    <TextView
                        android:id="@+id/txtPriceTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginTop="@dimen/STD_TXT_PADDING_SIZE"
                        android:fontFamily="sans-serif-condensed"
                        android:text=" = Price"
                        android:textSize="@dimen/N_TEXT"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnRemove"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="sans-serif-condensed"
            android:text="Remove"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/S_TEXT"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>