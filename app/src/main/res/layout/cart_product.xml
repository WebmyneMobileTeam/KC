<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cbs="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/CARD_DIVIDER_HEIGHT"
    android:layout_marginTop="@dimen/VS_TEXT_SIZE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/S_TEXT_SIZE"
            android:paddingRight="@dimen/S_TEXT_SIZE"
            android:paddingTop="@dimen/S_TEXT_SIZE">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pricing"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:textSize="@dimen/S_TEXT_SIZE" />

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/cartProductFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/unitPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginTop="@dimen/M_MARGIN_SIZE"
                    android:text="Price"
                    android:textSize="@dimen/S_TEXT_SIZE" />

                <TextView
                    android:id="@+id/unitQty"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/M_MARGIN_SIZE"
                    android:text="Price"
                    android:textSize="@dimen/S_TEXT_SIZE" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginTop="@dimen/M_MARGIN_SIZE"
                    android:text="Price"
                    android:textSize="@dimen/S_TEXT_SIZE"
                    android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

            <com.webmyne.kidscrown.ui.widgets.ComboSeekBar
                android:id="@+id/combo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                cbs:myColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#c0c0c0"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEFFDB"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/STD_TXT_PADDING_SIZE"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/STD_TXT_PADDING_SIZE"
                    android:src="@drawable/ic_update" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/STD_TXT_PADDING_SIZE"
                    android:text="Update"
                    android:textAllCaps="false" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/VL_TEXT_SIZE"
                android:layout_weight="0.005"
                android:background="#c0c0c0"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/STD_TXT_PADDING_SIZE">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/STD_TXT_PADDING_SIZE"
                    android:src="@drawable/ic_action_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/S_MARGIN_SIZE"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textSize="@dimen/S_TEXT_SIZE" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>