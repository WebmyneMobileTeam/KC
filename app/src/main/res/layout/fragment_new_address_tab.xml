<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/card_margin"
    android:paddingRight="@dimen/card_margin"
    tools:context="com.webmyne.kidscrown.fragment.ShippingAddressTab">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/STD_MARGIN_SIZE"
        android:layout_marginBottom="@dimen/STD_MARGIN_SIZE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginBottom="@dimen/LAYOUT_MARGIN_SIZE"
        android:gravity="center"
        android:orientation="vertical">


        <CheckBox
            android:id="@+id/checkbox"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/S_TEXT_SIZE"
            android:textColor="@color/primaryColor"
            android:text="Same as Billing Address?"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtShippingAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shipping Address 1"
                android:inputType="text"
                android:maxLines="6"
                android:singleLine="false"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L_MARGIN_SIZE">

            <EditText
                android:id="@+id/edtShippingAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shipping Address 2"
                android:inputType="text"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L_MARGIN_SIZE">

            <EditText
                android:id="@+id/edtShippingCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City"
                android:inputType="text"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L_MARGIN_SIZE">

            <EditText
                android:id="@+id/edtShippingState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State"
                android:inputType="text"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L_MARGIN_SIZE">

            <EditText
                android:id="@+id/edtShippingCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country"
                android:text="India"
                android:enabled="true"
                android:inputType="text"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/L_MARGIN_SIZE">

            <EditText
                android:id="@+id/edtShippingPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pincode"
                android:inputType="text"
                android:textColor="@color/colorTextSecondary"
                android:textColorHint="@color/colorTextSecondary"
                android:layout_marginBottom="50dp"
                android:textSize="@dimen/S_TEXT_SIZE" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
